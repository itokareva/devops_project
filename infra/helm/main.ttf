provider "helm" {
  kubernetes {
    config_path = "~/.kube/config"
  }
}

resource "helm_release" "my-rabbitmq" {
  name       = "my-rabbitmq"
  chart      = "../../helm/rabbitmq"
  version    = "7.6.6"
#  namespace  = "websrf"

  values = [
    "${file("values.yaml")}"
  ]
}

resource "helm_release" "mongodb" {
  name       = "mongodb"
  repository = "https://kubernetes-charts.storage.googleapis.com"
  chart      = "mongodb"
  version    = "7.8.10"
#  namespace  = "websrf"

  values = [
    "${file("values.yaml")}"
  ]
}

